                    <TextBlock
                        Text="ФИО председателя"
                        HorizontalAlignment="Center"
                        FontSize="24"/>

                    <TextBox
                        FontSize="24"
                        Name="CyclicFIOText"
                        Style="{StaticResource TextBoxStyle1}"
                        HorizontalContentAlignment="Center"
                        HorizontalAlignment="Stretch"
                        Text="{Binding FIO_predsedatel}"/>

                    <TextBlock
                        Text="Номер телефона председателя"
                        HorizontalAlignment="Center"
                        FontSize="24"/>

                    <TextBox
                        FontSize="24"
                        Name="CyclicPhoneText"
                        Style="{StaticResource TextBoxStyle1}"
                        HorizontalContentAlignment="Center"
                        HorizontalAlignment="Stretch"
                        Text="{Binding phone_predsedatel}"
