                        TextChanged="CyclicPhoneText_TextChanged"/>
                    
                    <Button
                        Style="{StaticResource ButtonStyle2}"
                        Margin="0 10 0 0"
                        Height="50"
                        FontSize="24"
                        Content="Добавить"
                        Name="AddCyclicBtn"
                        Click="AddCyclicBtn_Click"/>


                    <Button
                        Style="{StaticResource ButtonStyle2}"
                        Margin="0 10 0 0"
                        Height="50"
                        FontSize="24"
                        Content="Отмена"
                        Name="CalncelCyclicBtn"
                        Click="CalncelCyclicBtn_Click"/>


                </StackPanel>

            </Grid>
            
        </Grid>

    </Grid>
</Window>


