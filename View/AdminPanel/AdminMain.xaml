                                    FontSize="20"
                                    HorizontalAlignment="Stretch"/>



                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Text="Гражданство"
                                    FontSize="22"
                                    FontWeight="Bold"
                                    FontFamily="Times New Roman"/>

                                <TextBox
                                    Name="NationalStText"
                                    IsReadOnly="True"
                                    Text="{Binding national}"
                                    Style="{StaticResource TextBoxStyle1}"
                                    Margin="10 0 10 0"
                                    FontSize="20"
                                    HorizontalAlignment="Stretch"/>



                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Text="Школа"
                                    FontSize="22"
                                    FontWeight="Bold"
                                    FontFamily="Times New Roman"/>

                                <TextBox
                                    Name="SchoolStText"
                                    IsReadOnly="True"
                                    Text="{Binding school}"
                                    Style="{StaticResource TextBoxStyle1}"
                                    Margin="10 0 10 0"
                                    FontSize="20"
                                    HorizontalAlignment="Stretch"/>


                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Text="Паспортные данные"
                                    FontSize="22"
                                    FontWeight="Bold"
                                    FontFamily="Times New Roman"/>

                                <TextBox
                                    Name="PassportStText"
                                    IsReadOnly="True"
                                    Style="{StaticResource TextBoxStyle1}"
                                    Margin="10 0 10 0"
                                    FontSize="20"
                                    HorizontalAlignment="Stretch"/>



                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Text="Адрес"
                                    FontSize="22"
                                    FontWeight="Bold"
                                    FontFamily="Times New Roman"/>

                                <TextBox
                                    Name="AdresStText"
                                    IsReadOnly="True"
                                    Text="{Binding adres}"
                                    Style="{StaticResource TextBoxStyle1}"
                                    Margin="10 0 10 0"
                                    FontSize="20"
                                    HorizontalAlignment="Stretch"/>


                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Text="Телефон"
                                    FontSize="22"
                                    FontWeight="Bold"
                                    FontFamily="Times New Roman"/>

                                <TextBox
                                    Name="PhoneStText"
                                    IsReadOnly="True"
                                    Text="{Binding phone}"
                                    Style="{StaticResource TextBoxStyle1}"
                                    Margin="10 0 10 0"
                                    FontSize="20"
                                    HorizontalAlignment="Stretch"/>



                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Text="Общежитие"
                                    FontSize="22"
                                    FontWeight="Bold"
                                    FontFamily="Times New Roman"/>

                                <TextBox
                                    Name="HostelStText"
                                    IsReadOnly="True"
                                    Text="{Binding room}"
                                    Style="{StaticResource TextBoxStyle1}"
                                    Margin="10 0 10 0"
                                    FontSize="20"
                                    HorizontalAlignment="Stretch"/>

                            </StackPanel>

                            <StackPanel
                                Grid.Column="1"
                                Grid.Row="2"
                                HorizontalAlignment="Stretch">

                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Text="Состояние здоровья"
                                    FontSize="22"
                                    FontWeight="Bold"
                                    FontFamily="Times New Roman"/>

                                <TextBox
                                    Name="HealthStText"
                                    IsReadOnly="True"
                                    Text="{Binding health}"
                                    Style="{StaticResource TextBoxStyle1}"
                                    Margin="10 0 10 0"
                                    FontSize="20"
                                    HorizontalAlignment="Stretch"/>


                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Text="Сведения о семье"
                                    FontSize="22"
                                    FontWeight="Bold"
                                    FontFamily="Times New Roman"/>

                                
                                <TextBox
                                    Name="MotherStText"
                                    IsReadOnly="True"
                                    AcceptsReturn="True"
                                    TextWrapping="Wrap"
                                    Style="{StaticResource TextBoxStyle1}"
                                    Margin="10 0 10 0"
                                    FontSize="14"
                                    HorizontalAlignment="Stretch"/>


                                <TextBox
                                    Name="FatherStText"
                                    IsReadOnly="True"
                                    AcceptsReturn="True"
                                    TextWrapping="Wrap"
                                    Style="{StaticResource TextBoxStyle1}"
                                    Margin="10 5 10 0"
                                    FontSize="14"
                                    HorizontalAlignment="Stretch"/>


                                
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Text="Другие члены семьи"
                                    FontSize="22"
                                    FontWeight="Bold"
                                    FontFamily="Times New Roman"/>


                                <TextBox
                                    Name="BrothersStText"
                                    IsReadOnly="True"
                                    AcceptsReturn="True"
                                    TextWrapping="Wrap"
                                    Style="{StaticResource TextBoxStyle1}"
                                    Margin="10 0 10 0"
                                    FontSize="14"
                                    VerticalContentAlignment="Bottom"
                                    HorizontalAlignment="Stretch"/>

                                <TextBox
                                    Name="SistersStText"
                                    IsReadOnly="True"
                                    AcceptsReturn="True"
                                    TextWrapping="Wrap"
                                    Style="{StaticResource TextBoxStyle1}"
                                    Margin="10 0 10 0"
                                    VerticalContentAlignment="Bottom"
                                    FontSize="14"
                                    HorizontalAlignment="Stretch"/>



                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Text="Отношение с семьей"
                                    FontSize="22"
                                    FontWeight="Bold"
                                    FontFamily="Times New Roman"/>

                                <TextBox
                                    Name="RelationshipStText"
                                    IsReadOnly="True"
                                    Text="{Binding relationship}"
                                    Style="{StaticResource TextBoxStyle1}"
                                    Margin="10 0 10 0"
                                    FontSize="20"
                                    HorizontalAlignment="Stretch"/>


                                <TextBlock
                                    HorizontalAlignment="Center"
                                    Text="Увлечения"
                                    FontSize="22"
                                    FontWeight="Bold"
                                    FontFamily="Times New Roman"/>

                                <TextBox
                                    Name="HobbyStText"
                                    IsReadOnly="True"
                                    Text="{Binding hobby}"
                                    Style="{StaticResource TextBoxStyle1}"
                                    Margin="10 0 10 0"
                                    FontSize="20"
                                    HorizontalAlignment="Stretch"/>

                            </StackPanel>

                        </Grid>
                    </Border>
                </Popup>
                
                
            </Grid>
            
            <!--Groups-->
            <Grid
                Name="GroupsGrid"
                Visibility="Hidden"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="800"
                Height="500"
                Background="#e7e7e7">

                

                <Grid.RowDefinitions>
                    <RowDefinition Height="0.15*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Background="#cdcdcd">

                    <TextBlock 
                        Text="Информация о группах"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="36"/>

                    <Image
                    Grid.Row="0"
                    HorizontalAlignment="Left"
                    Width="85"
                    Margin="15 0 0 0"
                    Source="/images/BackBtn.png">
                        <Image.Style>
                            <Style TargetType="Image">
                                <EventSetter Event="MouseDown" Handler="Image_MouseDown"/>
                            </Style>
                        </Image.Style>
                    </Image>

                </Grid>

                <Border
                    Grid.ColumnSpan="2"
                    Grid.RowSpan="2"
                    BorderBrush="#222"
                    BorderThickness="2"/>
                
                <ListView
                    Grid.Row="1"
                    Grid.Column="0"
                    Background="Transparent"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Name="ListGroups">

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <EventSetter 
                                    Event="MouseDoubleClick"
                                    Handler="ListViewItem_MouseDoubleClick"/>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem
                                Header="Удалить"
                                Click="MenuItem_Click"/>
                        </ContextMenu>
                    </ListView.ContextMenu>
                    
                    
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                <TextBlock
                                    Text="{Binding name}"
                                    FontSize="36"/>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Popup
                    Name="DelGroups"
                    Width="225"
                    Height="150"
                    Placement="Center">

                    <Border
                        BorderBrush="#222"
                        BorderThickness="2"
                        Background="#e7e7e7">

                        <Grid>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.5*"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Grid
                                Grid.Row="0"
                                Background="#222"/>

                            <TextBlock
                                VerticalAlignment="Center"
                                Grid.Row="0"
                                Foreground="White"
                                FontSize="14"
                                TextWrapping="Wrap"
                                TextAlignment="Center"
                                Name="WarningPopupGroup"
                                Text="Вы уверены что хотите удалить "/>

                            <Button
                                Grid.Row="1"
                                Height="30"
                                Width="100"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Margin="5 0 0 0"
                                FontSize="15"
                                Name="DeletePopupGroupBtn"
                                Style="{StaticResource ButtonStyle2}"
                                Content="Удалить"
                                Click="DeletePopupGroupBtn_Click"/>

                            <Button
                                Name="CancelPopupGroupBtn"
                                Grid.Row="1"
                                Height="30"
                                Width="100"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                FontSize="15"
                                Margin="0 0 5 0"
                                Style="{StaticResource ButtonStyle2}"
                                Content="Отмена"
                                Click="CancelPopupGroupBtn_Click"/>

                        </Grid>
                        
                    </Border>
                    
                </Popup>
                
                <StackPanel
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Margin="10 0 10 0">

                    <TextBlock
                        Text="Название группы"
                        HorizontalAlignment="Center"
                        FontSize="24"/>

                    <TextBox
                        FontSize="24"
                        Name="GroupNameText"
                        Style="{StaticResource TextBoxStyle1}"
                        HorizontalContentAlignment="Center"
                        HorizontalAlignment="Stretch"
                        Text="{Binding name}"/>

                    <Button
                        Style="{StaticResource ButtonStyle2}"
                        Margin="0 10 0 0"
                        Height="50"
                        FontSize="24"
                        Content="Добавить"
                        Name="AddGroupBtn"
                        Click="AddGroupBtn_Click"/>

                    <Button
                        Style="{StaticResource ButtonStyle2}"
                        Margin="0 10 0 0"
                        Height="50"
                        FontSize="24"
                        Content="Отмена"
                        Name="CancelGroupBtn"
                        Click="CancelGroupBtn_Click"/>


                </StackPanel>
                
            </Grid>

            <!--Cyclic-->
            <Grid
                Name="CyclicGrid"
                Visibility="Hidden"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Width="1000"
                Height="500"
                Background="#e7e7e7">



                <Grid.RowDefinitions>
                    <RowDefinition Height="0.15*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <Grid
                    Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Background="#cdcdcd">

                    <TextBlock 
                        Text="Информация о цикловых комиссиях"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontSize="32"/>

                    <Image
                    Grid.Row="0"
                    HorizontalAlignment="Left"
                    Width="85"
                    Margin="15 0 0 0"
                    Source="/images/BackBtn.png">
                        <Image.Style>
                            <Style TargetType="Image">
                                <EventSetter Event="MouseDown" Handler="Image_MouseDown"/>
                            </Style>
                        </Image.Style>
                    </Image>

                </Grid>

                <Border
                    Grid.ColumnSpan="2"
                    Grid.RowSpan="2"
                    BorderBrush="#222"
                    BorderThickness="2"/>

                <ListView
                    Grid.Row="1"
                    Grid.Column="0"
                    Background="Transparent"
                    VerticalContentAlignment="Center"
                    Name="ListCyclic">

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <EventSetter 
                                    Event="MouseDoubleClick"
                                    Handler="ListViewItem_MouseDoubleClick_1"/>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ContextMenu>
                        <ContextMenu>
                            <MenuItem
                                Header="Удалить"
                                Click="MenuItem_Click_1"/>
                        </ContextMenu>
                    </ListView.ContextMenu>


                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel>
                                
                                <TextBlock
                                    Text="{Binding name}"
                                    FontSize="24"/>

                                <TextBlock
                                    Text="{Binding cabinet}"
                                    FontSize="24"/>

                                <TextBlock
                                    Text="{Binding FIO_predsedatel}"
                                    FontSize="24"/>

                                <TextBlock
                                    Text="{Binding phone_predsedatel}"
                                    FontSize="24"/>
                                
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Popup
                    Name="DelCyclic"
                    Width="225"
                    Height="150"
                    Placement="Center">

                    <Border
                        BorderBrush="#222"
                        BorderThickness="2"
                        Background="#e7e7e7">

                        <Grid>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="0.5*"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <Grid
                                Grid.Row="0"
                                Background="#222"/>

                            <TextBlock
                                VerticalAlignment="Center"
                                Grid.Row="0"
                                Foreground="White"
                                FontSize="14"
                                TextWrapping="Wrap"
                                TextAlignment="Center"
                                Text="Данные будут утеряны вы уверены?"/>

                            <Button
                                Grid.Row="1"
                                Height="30"
                                Width="100"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Margin="5 0 0 0"
                                FontSize="15"
                                Name="DeletePopupCyclicBtn"
                                Style="{StaticResource ButtonStyle2}"
                                Content="Удалить"
                                Click="DeletePopupCyclicBtn_Click"/>

                            <Button
                                Name="CancelCyclicGroupBtn"
                                Grid.Row="1"
                                Height="30"
                                Width="100"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Right"
                                FontSize="15"
                                Margin="0 0 5 0"
                                Style="{StaticResource ButtonStyle2}"
                                Content="Отмена"
                                Click="CancelPopupGroupBtn_Click_1"/>

                        </Grid>

                    </Border>

                </Popup>

                <StackPanel
                    Grid.Row="1"
                    Grid.Column="1"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    Margin="10 0 10 0"
                    Name="AddCyclicStack">

                    <TextBlock
                        Text="Наименование"
                        HorizontalAlignment="Center"
                        FontSize="24"/>

                    <TextBox
                        FontSize="24"
                        Name="CyclicNameText"
                        Style="{StaticResource TextBoxStyle1}"
                        HorizontalContentAlignment="Center"
                        HorizontalAlignment="Stretch"
                        Text="{Binding name}"/>

                    <TextBlock
                        Text="Кабинет"
                        HorizontalAlignment="Center"
                        FontSize="24"/>

                    <TextBox
                        FontSize="24"
                        Name="CyclicCabinetText"
                        Style="{StaticResource TextBoxStyle1}"
                        HorizontalContentAlignment="Center"
                        HorizontalAlignment="Stretch"
                        Text="{Binding cabinet}"
