<Window x:Class="CuratorsHelper.View.AssotialStudentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CuratorsHelper.View"
        mc:Ignorable="d"
    Title="CuratorsHelper" 
        Height="900"
        Width="1440" 
        WindowState="Maximized" 
        Background="#E7E7E7"
        WindowStyle="None"
        ResizeMode="NoResize">

    <Window.Resources>
        <Image x:Key="closeApp" Source="/images/close.png"/>
        <Style TargetType="Button" x:Key="menuStyle">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border 
                                    x:Name="border" 
                                    CornerRadius="50"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    ClipToBounds="True" 
                                    BorderThickness="{TemplateBinding BorderThickness}" 
                                    Background="{TemplateBinding Background}" 
                                    SnapsToDevicePixels="true">

                            <ContentPresenter 
                                        x:Name="contentPresenter" 
                                        Focusable="False" 
                                        HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                        Margin="{TemplateBinding Padding}" 
                                        RecognizesAccessKey="True"
                                        SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                        VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>

                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="BorderThickness" TargetName="border" Value="0.5"/>
                                <Setter Property="Margin" TargetName="border" Value="0.5"/>
                                <Setter Property="BorderBrush" 
                                                TargetName="border" 
                                                Value="#CCAD0000"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="border" Value="#FF1B1B1B"/>
                                <Setter Property="BorderBrush" TargetName="border" Value="#CCAD0000"/>
                            </Trigger>
                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.039*"/>
            <RowDefinition Height="0.12*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>


        <Grid Background="#222" Grid.Row="0"/>

        <TextBlock
            Text="CuratorsHelper"
            HorizontalAlignment="Left"
            Foreground="White"
            VerticalAlignment="Center"
            FontSize="20"
            Margin="10 0 0 0"/>

        <StackPanel Grid.Row="0" Orientation="Horizontal"
                    HorizontalAlignment="Right">


            <Button  
                Click="collapseWindow_Click"
            Name="collapseWindow"
            Content="___"
            Foreground="#888888"  
            Margin="0 0 5 0"
            Width="20" Height="20"
            HorizontalAlignment="Right"
            Background="#222"
            FontWeight="Bold"
            BorderThickness="0"
            Style="{StaticResource menuStyle}">

            </Button>


            <Button 
                Click="closeWindow_Click"
            Name="closeWindow"
            Content="╳"
            Foreground="#888888"  
            Width="20" Height="20"
            Background="#222"
            HorizontalAlignment="Right"
            BorderThickness="0"
                Style="{StaticResource menuStyle}">

            </Button>


        </StackPanel>


        <Grid Background="#CDCDCD" Grid.Row="1"/>

        <Image
            Grid.Row="1"
            HorizontalAlignment="Left"
            Width="85"
            Margin="15 0 0 0"
            Source="/images/BackBtn.png">
            <Image.Style>
                <Style TargetType="Image">
                    <EventSetter Event="MouseDown" Handler="Image_MouseDown"/>
                </Style>
            </Image.Style>
        </Image>

        <StackPanel Grid.Row="1"
                    HorizontalAlignment="Right"
                    Margin="0 0 10 0">
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <EventSetter Event="MouseDown" Handler="StackPanel_MouseDown"/>
                </Style>
            </StackPanel.Style>

            <Image
                Width="60"
                Source="/images/bxs_exit.png"/>

            <TextBlock
                Text="Выход"
                Foreground="#222"
                FontSize="28"
                FontFamily="Inter"/>

        </StackPanel>

        <Grid 
            Grid.Row="2"
            Margin="50 0 50 0">

            <Grid.RowDefinitions>
                <RowDefinition Height="0.3*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="0.4*"/>
                <RowDefinition Height="0.6*"/>
                <RowDefinition Height="0.6*"/>
                <RowDefinition Height="0.4*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="0.1*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>


            <TextBlock 
                Name="MainText"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Text="Факт ассоциального поведения учащегося"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="42"
                FontFamily="Times New Roman"/>


            <TextBlock 
                Grid.Row="1"
                Grid.Column="2"
                Text="Характер проявления"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="30"
                FontFamily="Times New Roman"/>

            <TextBox
                Name="Character_Text"
                Margin="0 40 0 0"
                Grid.Row="1"
                Grid.Column="2"
                Text="{Binding character}"
                Style="{DynamicResource TextBoxStyle1}"
                HorizontalAlignment="Stretch"
                BorderThickness="2"
                AcceptsReturn="True"
                TextWrapping="Wrap"
                FontSize="36"
                FontFamily="Times New Roman"
                TextAlignment="Left"/>


            <TextBlock 
                Grid.Row="2"
                Grid.Column="2"
                Text="Дата"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="30"
                FontFamily="Times New Roman"/>

            <DatePicker 
                Name="Date_Text"
                Grid.Row="2"
                Grid.Column="2"
                VerticalAlignment="Bottom"
                Text="{Binding date, StringFormat=yyyy.MM.dd}"
                Style="{DynamicResource DatePickerStyle1}"
                FontSize="36"/>


            <TextBlock 
                Grid.Row="3"
                Grid.Column="2"
                Text="Меры"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="30"
                FontFamily="Times New Roman"/>

            <TextBox
                Grid.Row="3"
                Grid.Column="2"
                Name="Measures_text"
                Margin="0 40 0 0"
                Text="{Binding measures}"
                Style="{DynamicResource TextBoxStyle1}"
                HorizontalAlignment="Stretch"
                BorderThickness="2"
                AcceptsReturn="True"
                TextWrapping="Wrap"
                FontSize="36"
                FontFamily="Times New Roman"
                TextAlignment="Left"/>


            <TextBlock 
                Grid.Row="4"
                Grid.Column="2"
                Text="Результат"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                FontSize="30"
                FontFamily="Times New Roman"/>

            <TextBox
                Grid.Row="4"
                Grid.Column="2"
                Name="Result_Text"
                Margin="0 40 0 0"
                Text="{Binding result}"
                Style="{DynamicResource TextBoxStyle1}"
                HorizontalAlignment="Stretch"
                BorderThickness="2"
                AcceptsReturn="True"
                TextWrapping="Wrap"
                FontSize="36"
                FontFamily="Times New Roman"
                TextAlignment="Left"/>

            <Button 
                Grid.Row="5"
                Grid.Column="2"
                Style="{DynamicResource ButtonStyle2}"
                HorizontalAlignment="Center"
                Content="ОК"
                Width="150"
                Margin="0 20 0 20"
                FontSize="36"
                FontFamily="Times New Roman"
                Name="Ok_Btn"
                Click="Ok_Btn_Click"/>


            <Grid 
                Grid.Row="1"
                Grid.Column="0"
                Grid.RowSpan="5"
                Margin="0 0 0 20">

                <Grid.RowDefinitions>
                    <RowDefinition Height="0.100*"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>


                <WrapPanel
                    Grid.Row="0"
                    Orientation="Horizontal">

                    <Border
                      BorderBrush="Black" 
                      BorderThickness="2,2,0,2"
                      Background="#333"
                        Height="59">

                        <TextBlock
                            Text="Дата"
                            Foreground="White"
                            FontSize="26"
                            TextAlignment="Center"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="Times New Roman"
                            Width="150"/>

                    </Border>


                    <Border
                      BorderBrush="Black" 
                      BorderThickness="2,2,0,2"
                      Background="#333"
                        Height="59">

                        <TextBlock
                            Text="Характер проявления"
                            Foreground="White"
                            FontSize="26"
                            TextAlignment="Center"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="Times New Roman"
                            Width="250"/>

                    </Border>

                    <Border
                      BorderBrush="Black" 
                      BorderThickness="2, 2, 0, 2"
                      Background="#333"
                        Height="59">

                        <TextBlock
                            Text="Меры"
                            Foreground="White"
                            FontSize="26"
                            TextAlignment="Center"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="Times New Roman"
                            Width="200"/>

                    </Border>

                    <Border
                      BorderBrush="Black" 
                      BorderThickness="2"
                      Background="#333"
                        Height="59">

                        <TextBlock
                            Text="Результат"
                            Foreground="White"
                            FontSize="26"
                            TextAlignment="Center"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontFamily="Times New Roman"
                            Width="218"/>

                    </Border>
                    
                </WrapPanel>


                <Border BorderBrush="Black"
                        BorderThickness="2,0,2,2"
                        Grid.Row="1">

                    <ListView 
                    Background="Transparent"
                    Name="AssotialList"
                    ScrollViewer.VerticalScrollBarVisibility="Visible">


                        <ListView.ContextMenu>
                            <ContextMenu>
                                <MenuItem
                                    Header="Удалить"
                                    Click="MenuItem_Click"/>
                                <MenuItem
                                    Header="Печать"
                                    Click="MenuItem_Click_1"/>
                            </ContextMenu>
                        </ListView.ContextMenu>

                        <ListView.ItemContainerStyle>

                            <Style TargetType="ListViewItem">
                                <EventSetter Event="MouseDoubleClick" 
                                             Handler="ListViewItem_MouseDoubleClick" />
                            </Style>

                        </ListView.ItemContainerStyle>

                        <ListView.ItemTemplate>
                            <DataTemplate>

                                <StackPanel
                                    Orientation="Horizontal">

                                    <Border
                                        BorderBrush="Black"
                                        BorderThickness="2,2,0,2">

                                        <TextBlock
                                            Text="{Binding date, StringFormat=yyyy.MM.dd}"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            TextAlignment="Center"
                                            FontSize="18"
                                            FontFamily="Times New Roman"
                                            Width="140"/>

                                    </Border>

                                    <Border
                                        BorderBrush="Black"
                                        BorderThickness="2,2,0,2">

                                        <TextBlock
                                            Text="{Binding character}"
                                            TextWrapping="Wrap"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            TextAlignment="Center"
                                            FontSize="18"
                                            Width="250"/>

                                    </Border>

                                    <Border
                                        BorderBrush="Black"
                                        BorderThickness="2,2,0,2">

                                        <TextBlock
                                            Text="{Binding measures}"
                                            TextWrapping="Wrap"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            TextAlignment="Center"
                                            FontSize="18"
                                            Width="200"/>

                                    </Border>
                                    
                                    <Border
                                        BorderBrush="Black"
                                        BorderThickness="2">

                                        <TextBlock
                                            Text="{Binding result}"
                                            TextWrapping="Wrap"
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            TextAlignment="Center"
                                            FontSize="18"
                                            Width="190"/>

                                    </Border>


                                </StackPanel>

                            </DataTemplate>
                        </ListView.ItemTemplate>

                    </ListView>

                </Border>
            </Grid>

        </Grid>

    </Grid>
</Window>

